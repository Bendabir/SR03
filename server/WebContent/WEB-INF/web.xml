<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>server</display-name>

   <servlet>
      <servlet-name>Games</servlet-name>
      <servlet-class>api.Games</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Games</servlet-name>
      <url-pattern>/api/games</url-pattern>
   </servlet-mapping>
   
   <servlet>
      <servlet-name>Consoles</servlet-name>
      <servlet-class>api.Consoles</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Consoles</servlet-name>
      <url-pattern>/api/consoles</url-pattern>
   </servlet-mapping> 
   
   <servlet>
      <servlet-name>GameGenres</servlet-name>
      <servlet-class>api.GameGenres</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>GameGenres</servlet-name>
      <url-pattern>/api/gameGenres</url-pattern>
   </servlet-mapping> 
</web-app>